---
import ContainerLarge from "../components/ContainerLarge.astro";
import Layout from "../layouts/Layout.astro";
import { team } from "../utils/teams";
import browser from "../assets/browser.svg"; 
import githublogo from "../assets/github-logo.svg"; 
import linkedinlogo from "../assets/linkedin-logo.svg"; 
---

<Layout title="Team Worldwide">
  
  <ContainerLarge>
    <div class="text-center px-4 py-8 flex flex-col justify-center space-y-4">
      <h1 class="font-light font-serif text-6xl">Our Team</h1>
      <div class="flex justify-center"></div>
    </div>

    <div class="flex flex-wrap -mx-2">
      {
        team.map((person) => (
          <div class="w-full xl:w-1/2 px-2 py-4 flex-row rounded-lg flex items-center gap-x-6">
            <div class="pl-4 lg:pl-20 flex-none">
              <img
                class="h-48 max-w-48 lg:max-w-64  lg:h-64 rounded-lg"
                src={person.image}
                alt={person.name}
              />
            </div>
            <div>
              <h3 class=" font-serif font-medium text-3xl leading-7 tracking-tight text-gray-900">
                {person.name}
              </h3>
              <p class=" text-sm text-gray-900 mt-4 pr-4">{person.bio}</p>
              <div class="flex space-x-4 py-2">
                {person.website && (
                  <a
                    href={person.website}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <img
                      src={browser.src}
                      alt="Website"
                      width="32"
                      height="32"
                    />
                  </a>
                )}
                {person.github && (
                  <a
                    href={person.github}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                  <img
                      src={githublogo.src}
                      alt="Github"
                      width="32"
                      height="32"
                    />
                  </a>
                )}
                {person.linkedin && (
                  <a
                    href={person.linkedin}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                  <img
                      src={linkedinlogo.src}
                      alt="LinkedIn"
                      width="32"
                      height="32"
                    />
                  </a>
                )}
              </div>

            </div>
          </div>
        ))
      }
    </div>
  </ContainerLarge>
</Layout>
