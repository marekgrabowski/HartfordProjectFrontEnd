import Layout from "../layouts/Layout.astro";
import ContainerLarge from "../components/ContainerLarge.astro";
---

<Layout title="TWW Hartford Project.">
	<main>
		<ContainerLarge>
			<h1 class="text-center text-3xl font-medium p-4">Welcome</h1>
			<div class="p-4">
				<p class="text-center">
					This site was designed by a group of <a
						target="_blank"
						rel="noopener"
						href="https://www.ccsu.edu/computerscience"
						>CCSU
					</a>Students as a part of their Software Engineering Course
					CS410
				</p>
				<p class="text-center">
					This project is a CO-OP with The Hartford Insruance Company,
					which the goal of creating a Mock App on AWS utlizing
					industry standard practices.
				</p>
			</div>
			<div class="h-full flex items-center justify-center">
				<a
					href="/search"
					class="w-1/2 md:w-1/3 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md transition-all duration-200 text-center"
					>Go to Search</a
				>
			</div>
