import Layout from "../layouts/Layout.astro";
import ContainerLarge from "../components/ContainerLarge.astro";
import VehicleForm from "../components/VehicleForm.jsx";

const headers = {
	Authorization: "allow",
	"Content-Type": "application/json",
};

const requestOptions = {
	method: "GET",
	headers: headers,
};

const makes = await fetch(
	"https://13g2g9a95h.execute-api.us-east-1.amazonaws.com/api/vehicles/GetAllMakes",
	requestOptions,
)
	.then((res) => res.json())
	.then((data) => data.body);
---

<Layout title="TWW Hartford Project.">
	<main>
		<ContainerLarge>
			<h1 class="text-center text-3xl font-medium p-4">Vehicle Search</h1>
			<p class="text-center pb-5">
				Select a Make Model and Year from the drop downs to lookup a
				vechicle
			</p>
			<!-- Client Loaded "Dynamic Island" Allows runtime JS -->
			<VehicleForm makes={makes} client:only="react" />
		</ContainerLarge>
	</main>
</Layout>
