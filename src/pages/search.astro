---
import Layout from '../layouts/Layout.astro';
import ContainerLarge from '../components/ContainerLarge.astro';
---

<Layout title="TWW Hartford Project.">
	<main>
		<ContainerLarge>
			<h1 class="text-center text-3xl font-medium p-4">My Account</h1>
			<p class="text-center font-medium pb-5">View and modify account information</p>

			<form>
				<div>
					<label for="name">Name: &nbsp;</label>
					<input type="text" name="name" id="name" required>
				</div>
				<div>
					<label for="email">Email: &nbsp;</label>
					<input type="email" name="email" placeholder="Enter your email" id="email" required>
				</div>
				<div>
					<label for="role">Role: &nbsp;</label>
					<input type="text" name="role" id="role" required>
				</div>
				<div>
					<label for="currentpassword">Current Password: &nbsp;</label>
					<input type="password" name="currentpassword" id="currentpassword">
				</div>
				<div>
					<label for="newpassword">New Password: &nbsp;</label>
					<input type="password" name="newpassword" id="newpassword">
				</div>
				<div>
					<input type="button" value="Submit">
				</div>
			</form>
		</ContainerLarge>
	</main>
</Layout>