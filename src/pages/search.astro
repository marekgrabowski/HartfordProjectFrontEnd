---
import Layout from "../layouts/Layout.astro";
import ContainerLarge from "../components/ContainerLarge.astro";
---

<Layout title="TWW Hartford Project.">
	<main>
		<ContainerLarge>
			<h1 class="text-center text-3xl font-medium p-4">SIGN UP</h1>
			<p class="text-center font-medium pb-5" style="color: rgb(143, 15, 15);">
				View and modify account information
			</p>

			<form class="form-container">
			<div class="signup-box">
				<div class="row">
					<div class="col-25">
						<label for="fname">First Name</label>
					</div>
					<div class="col-75">
						<input
							type="text"
							id="fname"
							name="firstname"
							placeholder="Your first name.."
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="lname">Last Name</label>
					</div>
					<div class="col-75">
						<input
							type="text"
							id="lname"
							name="lastname"
							placeholder="Your last name.."
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="email">Email</label>
					</div>
					<div class="col-75">
						<input
							type="email"
							id="email"
							name="email"
							placeholder="Enter your email"
							required
						/>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="role">Role</label>
					</div>
					<div class="col-75">
						<select id="role" name="role" required>
							<option value="admin"></option>
							<option value="admin">Admin</option>
							<option value="consumer">General User</option>
						</select>
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="password">Password</label>
					</div>
					<div class="col-75">
						<input type="password" name="password" id="password" />
					</div>
				</div>
				<div class="row">
					<div class="col-25">
						<label for="confirmpassword">Confirm Password</label>
					</div>
					<div class="col-75">
						<input
							type="password"
							name="confirmpassword"
							id="password"
						/>
					</div>
				</div>
				<div class="row">
					<input type="submit" value="Submit" />
				</div>
				<p class="last">Already have an account? &nbsp;<a href="/signin" style="text-decoration: underline; color: blue;">Login here</a></p>
			</div>
			</form>
		</ContainerLarge>
	</main>
</Layout>

<style>
	* {
		box-sizing: border-box;
	}

	.row {
    display: flex;
    justify-content: center;
  }

  
  .form-container {
    max-width: 700px;
    margin: 0 auto;
  }
	

	input[type="text"],
	input[type="email"],
	input[type="password"],
	select,
	textarea {
		width: 70%;
		padding: 7px;
		border: 1px solid #ccc;
		border-radius: 4px;
		resize: vertical;
	}

	label {
		display: inline-block;
	}

	input[type="submit"] {
		background-color: #217ce5;
		color: white;
		padding: 9px 20px;
		border-radius: 4px;
		cursor: pointer;
		margin-top: 6px;
	}

	input[type="submit"]:hover {
		background-color: #1109f9;
	}

	.col-25 {
		float: left;
		width: 25%;
		margin-top: 6px;
	}

	.col-75 {
		width: 75%;
		margin-top: 6px;
	}

	/* Clear floats after the columns */
	.row:after {
		content: "";
		display: table;
		clear: both;
	}

	/* Responsive layout - when the screen is less than 600px wide, make the two columns stack on top of each other instead of next to each other */
	@media screen and (max-width: 600px) {
		.col-25,
		.col-75,
		{
			width: 100%;
			margin-top: 0;
		}
	}

	.col-25 label, .last {
    padding-left: 16px;
  }
</style>
