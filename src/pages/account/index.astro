---
import Layout from '../../layouts/Layout.astro';
import ContainerLarge from '../../components/ContainerLarge.astro';
import SubNav from '../../components/SubNav.astro';
---

<Layout title="My Account Settings">
	<main>
			<ContainerLarge>
				<div class="flex h-full">
					<div class="w-1/5 text-center flex flex-col items-center bg-blue-500 rounded-l-md pt-6 text-white" >
					<p>My Account</p>
					<p class="border-t border-b w-2/3 mt-4 pt-4 mb-4 pb-4">Saved Vehicles</p>	
					</div>
				<div class="flex-auto w-full rounded-r-md">
					<h1 class="text-center text-3xl font-medium pt-3">My Account</h1>
					<p class="text-center font-medium text-gray-700">View and modify account information</p>	
					<form action="#" method="POST" class="mx-auto 4 max-w-xl sm:mt-4">
						<div class="grid grid-cols-1 gap-x-8 gap-y-2 sm:grid-cols-2">
						  <div class="sm:col-span-2">
							<label for="first-name" class="block text-sm font-semibold leading-6 text-gray-900">First name</label>
							<div class="mt-1">
							  <input type="text" name="first-name" id="first-name" autocomplete="given-name" class="block w-1/2 lg:w-full mx-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-200 sm:text-sm sm:leading-6">
							</div>
						  </div>
						  <div>
							<label for="last-name" class="block text-sm font-semibold leading-6 text-gray-900">Last name</label>
							<div class="mt-1">
							  <input type="text" name="last-name" id="last-name" autocomplete="family-name" class="block w-1/2 lg:w-full mx-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-200 sm:text-sm sm:leading-6">
							</div>
						  </div>
						  <div>
							<label for="role" class="block text-sm font-semibold leading-6 text-gray-900">Role</label>
							<div class="mt-1">
							  <select name="roles" id="roles" class="block w-1/2 lg:w-full mx-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-200 sm:text-sm sm:leading-6">
								<option value="blank"></option>
								<option value="admin" class="font-medium">Admin</option>
								<option value="user" class="font-medium">User</option>
							  </select>
							</div>
						  </div>
						  <div class="sm:col-span-2">
							<label for="email" class="block text-sm font-semibold leading-6 text-gray-900">Email</label>
							<div class="mt-1">
							  <input type="email" name="email" id="email" autocomplete="email" class="block w-1/2 lg:w-full mx-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-200 sm:text-sm sm:leading-6">
							</div>
						  </div>
						</form>
				</div>
			</div>
					
			</ContainerLarge>
			</main>
		</Layout>
		
	</main>
</Layout>