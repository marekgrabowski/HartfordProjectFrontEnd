---
import Layout from "../../layouts/Layout.astro";
import ContainerLarge from "../../components/ContainerLarge.astro";
import Modal from "../../components/Modal";
import edit from "../assets/pencil.svg";
---

<Layout title="My Account Settings">
  <main>
    <ContainerLarge>
      <div class="flex flex-col h-full justify-center items-center space-y-4">
        <h1 class="text-4xl font-semibold text-gray-800">Admin</h1>
        <div class="flex items-center space-x-4">
          <h3 class="text-2xl text-gray-600">Modify Premium Formula</h3>
          <Modal
            client:load
            title="Edit Premium Formula"
            desc="Modify weights in the premium calculation formula"
            field_type="search"
            openicon="edit"
            api_endpoint="https://fd1vjz5z8c.execute-api.us-east-1.amazonaws.com/api/vehicles/premium/configuration"
          />
        </div>
      </div>
    </ContainerLarge>
  </main>
</Layout>
