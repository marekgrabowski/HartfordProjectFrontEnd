---
// Author: Marek Grabowski

import { navItems } from "../utils/navigation"
import { Image } from 'astro:assets';
import HartfordLogo from "../assets/The_Hartford_Financial_Services_Group_logo.svg"

type NavbarProps = {
  display?: boolean;
};

const { display = true } = Astro.props as NavbarProps;
---

<nav
  role="navigation"
  aria-label="navigation"
  id="top-nav"
  class="flex flex-col md:flex-row md:justify-between gap-4 items-center p-4 bg-blue-400"
>

  <ul class="flex justify-center items-center gap-8 px-3 py-1" >
    <li>
      <Image class=" w-12" src={HartfordLogo} alt="The Hartford"/>
        </li>
    {
      navItems.map((navItem) => (
        <li>
          <a
            href={navItem.route}
            class="relative font-medium text-black dark:text-white before:absolute before:-bottom-1 before:h-0.5 before:w-full before:scale-x-0 before:bg-blue-800 before:transition hover:before:scale-x-100"
          >
            {navItem.text}
          </a>
        </li>
      ))
    }
  </ul>
</nav>